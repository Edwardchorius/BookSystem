@using BookSystem.Models.HomeViewModels
@model TopBooksViewModel

<div id="data">
    <form asp-controller="Home" asp-action="Index" method="get" id="top-books-form">
        <div class="form-actions no-color">
            <span>
                Search by keyword/s: <input type="text" name="searchByTitle" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-default" />
            </span>
        </div>
    </form>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        <a asp-controller="Home" asp-action="Index" method="get" id="top-books-sorted" class="btn btn-default" asp-route-sortOrder="@ViewData["TitleSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" name="a">Title</a>
                    </th>
                    <th>
                        Genre
                    </th>
                    <th>
                        Rating
                    </th>
                </tr>
            </thead>
            <tbody name="bodydata">
                @foreach (var book in Model.TopBooks)
                {
                    <tr>
                        <td>
                            @book.Title
                        </td>
                        <td>
                            @book.Genre
                        </td>
                        <td>
                            @book.TotalRating
                        </td>
                        <td>
                            <a asp-controller="Review" asp-action="BookReviews" asp-route-bookId="@book.BookId" class="btn btn-success">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
   
</div>
@section Scripts{
    <script src="~/js/topbooks.js"></script>
}